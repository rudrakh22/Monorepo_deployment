

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id           String   @id @default(cuid())
  username     String   
  password     String
  todos         Todo[]
}

model Todo {
  id        String   @id @default(cuid())
  task     String
  done Boolean  @default(false)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}